@model List<BookingTicket.Entities.Models.ChoNgoi>
<table class="table table-hover">
    <thead>
        <tr>
            <th>ViTri</th>
            <th>TinhTrang</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>Ghế @item.ViTriChoNgoi</td>
                <td><button style="background-color: @(item.TinhTrang == 0 ? "green" : "red")" type="button" data-id="@item.MaChoNgoi" class="btn btn-success vitrichongoi">@(item.TinhTrang == 0 ? "Chưa đặt" : "Đã đặt")</button></td>
            </tr>
        }
    </tbody>
</table>

<script>
    $(document).ready(function () {
        $(".vitrichongoi").click(function (e) {
            $.ajax({
                url: "/Admin/DieuHanh/UpdateStatusChoNgoi",
                data: {
                    id: $(this).data("id")
                },
                type: "GET",
                contentType: "json",
                success: function (data) {
                    console.log(data);
                    if (data === 1) {
                        $(e.target).css("background-color", "red");
                        $(e.target).text("Đã đặt");
                    } else {
                        $(e.target).css("background-color", "green");
                        $(e.target).text("Chưa đặt");
                    }
                },
                error: function (response) {
                    console.log(response)
                }
            });
        });
    });
</script>
