@model List<List<BookingTicket.Entities.Models.ChoNgoi>>
<table class="table table-hover">
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            @foreach (var subitem in item)
            {
                @if (subitem.MaChoNgoi == ViewBag.GheDuocChon)
                {
                    <td>
                        <button style="background-color: gray;" type="button" data-selected="true" data-id="@subitem.MaChoNgoi" class="btn btn-success vitrichongoi vitrihientai">@subitem.ViTriChoNgoi</button>
                    </td>
                }
                else
                {
                    <td>
                        <button @(subitem.TinhTrang == 1 ? "disabled" : "") data-selected="false" style="background-color: @(subitem.TinhTrang == 0 ? "green" : "red")" type="button" data-id="@subitem.MaChoNgoi" class="btn btn-success vitrichongoi">@subitem.ViTriChoNgoi</button>
                    </td>
                }

            }

        </tr>
        }
    </tbody>
</table>
<script>
    $(document).ready(function () {
        $(".vitrichongoi").click(function (e) {
            let btns = $(".vitrichongoi");
            for (var i = 0; i < btns.length; i++) {
                let btn = $(btns[i]);
                btn.attr("data-selected", "false");
                if (!btn.attr("disabled")) {
                    btn.css({ "background-color": "green"})
                }
            }
            $(e.target).attr("data-selected", "true");
            $(e.target).css({ "background-color": "gray" });
        });
    });
</script>