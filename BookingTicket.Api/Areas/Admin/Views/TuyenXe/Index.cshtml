@section scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            $('#ThoiGianKhoiHanh_Create').datetimepicker({
                format: 'LT'
            });

            $('#ThoiGianKetThuc_Create').datetimepicker({
                format: 'LT'
            });
        });
    </script>
}