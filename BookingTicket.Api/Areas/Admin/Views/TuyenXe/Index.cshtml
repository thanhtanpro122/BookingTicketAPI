<!-- Create modal -->
<div class="modal fade" id="CreateModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Thêm Tuyến Xe</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label for="exampleInputName1">Tên tuyến</label>
                    <input class="form-control" type="text" id="example-datetime-local-input"
                           placeholder="Chọn hãng xe">
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Địa điểm đi</label>
                    <input type="text" class="form-control" id="exampleInputName1" placeholder="Địa điểm đi">
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Địa điểm điến</label>
                    <input type="text" class="form-control" id="exampleInputName1" placeholder="Địa điểm đến">
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Giờ đi</label>
                    <div class="input-group date" id="timepicker-example" data-target-input="nearest">
                        <div class="input-group" data-target="#timepicker-example" data-toggle="datetimepicker">
                            <input type="text" placeholder="Thời gian đi" class="form-control datetimepicker-input" data-target="#timepicker-example" />
                            <div class="input-group-addon input-group-append"><i class="mdi mdi-clock input-group-text"></i></div>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Giờ đến</label>
                    <div class="input-group date" id="timepicker-example" data-target-input="nearest">
                        <div class="input-group" data-target="#timepicker-example" data-toggle="datetimepicker">
                            <input type="text" placeholder="Thời gian đến" class="form-control datetimepicker-input" data-target="#timepicker-example" />
                            <div class="input-group-addon input-group-append"><i class="mdi mdi-clock input-group-text"></i></div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-success">Create</button>
            </div>
        </div>
    </div>
</div>

